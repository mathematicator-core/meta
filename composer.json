{
	"name": "mathematicator-core/meta",
	"description": "Mathematicator meta repository of its libraries for development purposes",
	"keywords": [
		"mathematicator",
		"math",
		"php"
	],
	"type": "library",
	"license": "MIT",
	"homepage": "https://github.com/mathematicator-core/meta",
	"authors": [
		{
			"name": "Miloš Havlíček",
			"email": "miloshavlicek@gmail.com"
		},
		{
			"name": "Jan Barášek",
			"homepage": "https://baraja.cz"
		}
	],
	"repositories": [
		{
			"type": "path",
			"url": "./libs/calculator"
		},
		{
			"type": "path",
			"url": "./libs/engine"
		},
		{
			"type": "path",
			"url": "./libs/integral-solver"
		},
		{
			"type": "path",
			"url": "./libs/mandelbrot-set"
		},
		{
			"type": "path",
			"url": "./libs/numbers"
		},
		{
			"type": "path",
			"url": "./libs/search"
		},
		{
			"type": "path",
			"url": "./libs/tokenizer"
		},
		{
			"type": "path",
			"url": "./libs/vizualizator"
		}
	],
	"require": {
		"php": ">=7.2",
		"psr/cache": "^1.0",
		"psr/container": "^1.0",
		"symfony/filesystem": "^5.0",
		"mathematicator-core/calculator": "dev-master as 2.0.0",
		"mathematicator-core/engine": "dev-master as 2.0.0",
		"mathematicator-core/integral-solver": "dev-master as 2.0.0",
		"mathematicator-core/numbers": "dev-master as 2.0.0",
		"mathematicator-core/search": "dev-master as 2.0.0",
		"mathematicator-core/statistic": "dev-master as 2.0.0",
		"mathematicator-core/tokenizer": "dev-master as 2.0.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^0.12.25",
		"phpstan/phpstan-nette": "^0.12.6"
	},
	"scripts": {
		"install:all": [
			"composer install -d libs/calculator",
			"composer install -d libs/engine",
			"composer install -d libs/integral-solver",
			"composer install -d libs/mandelbrot-set",
			"composer install -d libs/numbers",
			"composer install -d libs/search",
			"composer install -d libs/tokenizer",
			"composer install -d libs/vizualizator"
		],
		"update:all": [
			"composer update -d libs/calculator",
			"composer update -d libs/engine",
			"composer update -d libs/integral-solver",
			"composer update -d libs/mandelbrot-set",
			"composer update -d libs/numbers",
			"composer update -d libs/search",
			"composer update -d libs/tokenizer",
			"composer update -d libs/vizualizator"
		],
		"phpstan:all": [
			"composer phpstan -d libs/calculator",
			"composer phpstan -d libs/engine",
			"composer phpstan -d libs/integral-solver",
			"composer phpstan -d libs/mandelbrot-set",
			"composer phpstan -d libs/numbers",
			"composer phpstan -d libs/search",
			"composer phpstan -d libs/tokenizer",
			"composer phpstan -d libs/vizualizator"
		],
		"test:all": [
			"composer test -d libs/calculator",
			"composer test -d libs/engine",
			"composer test -d libs/integral-solver",
			"composer test -d libs/mandelbrot-set",
			"composer test -d libs/numbers",
			"composer test -d libs/search",
			"composer test -d libs/tokenizer",
			"composer test -d libs/vizualizator"
		]
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.0.x-dev"
		}
	}
}
